@model MailViewModel

<form method="post">
    <div class="col-md-9 mb-md-0 mb-5 m-5">
        <h1 class="mb-3" style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif">Contact Us</h1>
        <form asp-action="Index">
            <div class="mb-3">
                <div class="col-md-6">
                    <div class="md-form mb-0">
                        <input asp-for="Subject" class="form-control" placeholder="Subject">
                        <span asp-validation-for="Subject" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <div class="col-md-12">
                    <div class="md-form mb-0">
                        <textarea type="text" asp-for="Body" rows="4" class="form-control md-textarea" placeholder="Message.."></textarea>
                        <span asp-validation-for="Body" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group mb-5">
                <input type="submit" value="SEND" class="btn btn-primary" />
            </div>
        </form>
    </div>
</form>


<body>
    <!--
    header-img start
    ============================== -->
    <section id="hero-area">
        <div class="header-div">
            <img class="header-image" src="~/image/header.jpg" alt="">
            <h1 class="header-text">Boost Burger</h1>
        </div>
    </section>
    <nav class="navbar navbar-expand-lg navigation sticky-top">
        <div class="row w-100">
            <div class="col-5 my-4">
                <button class="navbar-toggler" style="color: antiquewhite" type="button" data-bs-toggle="collapse" data-bs-target="#menuNavbarContent" aria-controls="menuNavbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fa-solid fa-bars"></i>
                </button>

                <div class="collapse navbar-collapse" id="menuNavbarContent">
                    <ul class="navbar-nav w-100 justify-content-around">
                        <li class="nav-item">
                            <div class="customLink">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index" asp-route-cid="1">Beef</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <div class="customLink">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index" asp-route-cid="2">Chicken</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <div class="customLink">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index" asp-route-cid="3">Kids</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <div class="customLink">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index" asp-route-cid="4">Vegan</a>
                            </div>
                        </li>

                    </ul>
                </div>
            </div>
            <div class="col-2">
                <div class="text-center my-2">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <img style="height: 9vw; max-height: 100px;" src="~/image/logo.png" alt="Logo">
                    </a>
                </div>
            </div>
            <div class="col-5 text-end my-4">
                <button class="navbar-toggler" style="color: antiquewhite" type="button" data-bs-toggle="collapse" data-bs-target="#loginPartialContent" aria-controls="loginPartialContent" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fa-solid fa-bars"></i>
                </button>
                <div class="collapse navbar-collapse" id="loginPartialContent">
                    <ul class="navbar-nav w-100 justify-content-around">
                        <partial name="_LoginPartial" />
                    </ul>
                </div>
            </div>
        </div>
    </nav>

